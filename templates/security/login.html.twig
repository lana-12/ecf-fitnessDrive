{% extends 'base.html.twig' %}

{% block title %}Connection | {{ parent()}}{% endblock %}

{% block stylesheets %} 
        {{ parent() }}
        {{ encore_entry_link_tags('login') }}

{% endblock %}

{% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('test') }} 
{% endblock %}

{% block body %}

<main>
    <h1 class="title_home" >Fitness Drive</h1>
        <form action="" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey }}</div>
            {% endif %}
            {# {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %} #}

            {% if app.user %}
                <div class="mb-3 text-white">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnection</a>
                </div>
            {% endif %}

                <div class="box-connexion">
                    <div class="login form-group" >
                        <h2>Saisissez vos identifiants de connection</h2>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="" placeholder="exemple@exemple.fr" autocomplete="email" required autofocus>

                            <input type="password" name="password" id="inputPassword" class="" placeholder="Mot de passe" autocomplete="current-password" required>

                    </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn  mx-auto" type="submit">Connection</button>
                
            </div>
        </form>
</main>       
{% endblock %}
