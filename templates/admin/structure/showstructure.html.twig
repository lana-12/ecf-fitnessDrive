{% extends 'admin/index.html.twig' %}

{% block title %}Liste  | {{ parent() }} {% endblock %}

{% block body %} 
<body>
{% block header %} {{parent()}}  {% endblock  %}

    <main class='main-container col-12'>

    {% block Breadcrumb %}
        <section>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_admin') }}">Accueil</a>
                    </li>
                    <li class="breadcrumb-item "><a href="{{ path( 'show-partner', {'id': structure.partner.id}) }}">Franchise</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Détail de la Structure</li>
                </ol>
            </nav>
        </section>
    {% endblock  %}

            <h2> Détail de la Structure <span class="detail">{{structure.nameStructure}}</span> </h2>
        
        {% include "admin/structure/_structure.html.twig" %}


            <h2>Liste des permissions</h2>


{% for permission in permissions %}
	<p class='permissions'>
		{{permission.title}}
        {% if structure.isActive %}
<span class="p-2">Active</span>
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill text-primary" viewbox="0 0 16 16"><circle cx="8" cy="8" r="8"/></svg>


        {% else %}
<span class="p-2">InActive</span>
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill text-danger" viewbox="0 0 16 16"><circle cx="8" cy="8" r="8"/></svg>


        {% endif %}

    </p>
	{% endfor %}



    </main>

</body>
{% endblock %}
    
        
    

    