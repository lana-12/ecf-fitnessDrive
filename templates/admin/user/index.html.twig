{% extends 'admin/index.html.twig' %}

{% block title %}Liste des Utilisateurs  | {{ parent() }} {% endblock %}

{% block javascripts %}

	{{parent()}}
	<!-- My JS -->
	{{ encore_entry_script_tags('user') }}


{% endblock %}


{% block body %}
<body>
	{% block header %} {{parent()}} {% endblock  %}

	<main class='main-container col-12'>


	{% block Breadcrumb %}
		<section>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item back">
						<a href="{{ path('app_admin') }}" alt="Retour liste Franchise | Accueil" title="Retour liste Franchise | Accueil">Accueil</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page" alt="liste Utilisateur" title="liste Utilisateur">Liste Utilisateurs</li>
				</ol>
			</nav>
		</section>
	{% endblock  %}

	{% block searchBar %}
		<section>
			<!-- Barre de recherche start-->
			<nav class="row">
				<div class="col-12 search">

					<input id="searchbarUser" class=" inputSearch mx-auto" type="text" placeholder="Chercher un Utilisateur " aria-label="Search">
					<input
					id="hidden" class=" inputSearch me-2" type="hidden" aria-label="hidden">
				</div>
			</nav>
			<!-- Barre de recherche end-->
		</section>
	{% endblock %}

		<section>

			<h2 class='titleIndex'>{{ titlePage }}</h2>

				{% include "admin/user/_list.html.twig" %}
			
		</section>

	{% block paginated %}

		<section class='d-flex justify-content-center'>
			<nav aria-label="Page navigation example">
				<ul class="pagination pagination-sm">

			{% for i in 1..((countUsers/30) | round(0, 'ceil')) %}
					<li class="page-item">
						<a class="page-link" href="{{ path('app_user_list', {page:i})}}">{{i}}</a>
					</li>
			{% endfor %}

				</ul>
			</nav>
		</section>

	{% endblock  %}

		<a class="rocket back" href='{{ path('app_user_list')}}'>
			<i class="fa fa-rocket" alt="Retour à la liste" title="Retour à la liste"></i>
		</a>


	</main>
</body>
{% endblock %}



	

